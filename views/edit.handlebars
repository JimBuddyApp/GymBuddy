<div class="main-scroll account-container">
    <div class="btn-person header-profile">
        <p class="header-font">
            My Profile
        </p>
    </div>
    <div class='account-photo'>
        <img src="images/stock/dp.jpg" width="150"; height:="150">
    </div>
    <div class="btn-edit">
        <button type='button' class="btn btn-primary" onclick="window.location.href='/edit'">Change Profile Photo</button> 
    </div>
    <br>
    <div class='account-block'>
        Discoverable as a Mentor
        <label class="switch">
            <input type="checkbox">
            <span class="slider round"></span>
        </label>
    </div>
    <form>
        {{#if firstTime}}
        <div class='input'>
            <br>
            <label>Name:  </label>
            <input>
        </div>
        <br>
        {{/if}}
    </form>
    <div class='account-workout'>
        <p class='account-workout-label'>Main Type of Workout:</p>
        <input type="radio" id="radio1" name="type" value="weight">
        <label for="radio1">Weight</label>

        <input type="radio" id="radio2" name="type" value="flexibility">
        <label for="radio2">Flexibility</label>

        <input type="radio" id="radio3" name="type" value="cardio">
        <label for="radio3">Cardio</label>
    </div>
    <div class="btn-edit">
        <button type='button' class="btn btn-primary" onclick="window.location.href='/profile'">Cancel Changes</button> 
    </div>
    <div class="btn-edit">
        <button type='button' class="btn btn-primary" onclick="window.location.href='/profile'">Save Changes</button> 
    </div>
</div>