<div class='wrapper viewport-height'>
    <div class="main-home">
        <img class="logo" src='/images/temporary-logo.png'>
    </div>
    <div class="main-scroll">
        <div class="btn-person header-friends">
            <p class="header-font">
                My Buddies
            </p>
        </div>

        {{#each friends}}
        <div class="btn-person">
            <svg id="i-user" class="icon-user" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                <path d="M22 11 C22 16 19 20 16 20 13 20 10 16 10 11 10 6 12 3 16 3 20 3 22 6 22 11 Z M4 30 L28 30 C28 21 22 20 16 20 10 20 4 21 4 30 Z" />
            </svg>
            <a href="public/html/account.html" class="btn-person-font">{{name}}</a>
            <svg id="i-chevron-right" class="icon-forward" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="20" height="20" fill="none" stroke="currentcolor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                <path d="M12 30 L24 16 12 2" />
            </svg>
        </div>
        {{/each}}

    </div>
    <nav class="tab navbar fixed-bottom navbar-light bg-light">
        <svg class="btn-nav" id="i-home" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" width="32" height="32" fill="none" stroke="#FFCD00" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" onclick="window.location.href='/'">
        <path d="M12 20 L12 30 4 30 4 12 16 2 28 12 28 30 20 30 20 20 Z" />
